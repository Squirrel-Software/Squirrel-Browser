{
	"name": "squirrel-browser",
	"productName": "squirrel Browser",
	"version": "0.0.2",
	"description": "Modern, Private, Fast web browser",
	"author": "Squirrel Software",
	"license": "GPL-3.0",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "electron .",
		"build": "electron-packager . Squirrel Browser --platform=win32 --arch=ia32 --icon=logo.ico --prune=true --out=builds --asar=true --overwrite",
		"build-win": "electron-builder build --win",
		"watch": "postcss src/style.css -o public/assets/styles/style.css -w"
	},
	"build": {
		"appId": "squirrel.org",
		"icon": "./logo.ico"
	},
	"main": "main.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Squirrel-Software/Squirrel-Browser.git"
	},
	"bugs": {
		"url": "https://github.com/Squirrel-Software/Squirrel-Browser/issues"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.13",
		"electron": "^22.1.0",
		"electron-builder": "^24.4.0",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"postcss-loader": "^7.0.2",
		"tailwindcss": "^3.2.4"
	},
	"dependencies": {
		"@cliqz/adblocker-electron": "^1.26.5",
		"cross-fetch": "^3.1.5",
		"discord-rpc": "^4.0.1",
		"electron-context-menu": "^3.6.1",
		"electron-updater": "^5.3.0"
	}
}
